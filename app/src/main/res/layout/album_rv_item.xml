<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_today_album_item_root"
    android:layout_width="150dp"
    android:layout_height="wrap_content"
    android:padding="10dp">


    <androidx.cardview.widget.CardView
        android:id="@+id/today_album_cv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/today_album_iv"
            android:layout_width="130dp"
            android:layout_height="130dp"
            android:scaleType="fitXY" />

        <ImageView
            android:id="@+id/today_album_play_iv"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom|right"
            android:layout_margin="10dp"
            android:src="@drawable/widget_black_play" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/today_album_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/today_album_cv"
        app:layout_constraintTop_toBottomOf="@id/today_album_cv" />

    <TextView
        android:id="@+id/today_album_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@id/today_album_title_tv"
        app:layout_constraintTop_toBottomOf="@id/today_album_title_tv" />

</androidx.constraintlayout.widget.ConstraintLayout>