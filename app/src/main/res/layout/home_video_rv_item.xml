<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_video_recycler_item"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/home_video_cover_cd"
        android:layout_width="270dp"
        android:layout_height="150dp"
        app:cardCornerRadius="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:scaleType="fitXY"
                android:id="@+id/home_video_cover_iv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

    </androidx.cardview.widget.CardView>



    <TextView
        android:id="@+id/home_video_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/home_video_cover_cd"
        app:layout_constraintTop_toBottomOf="@+id/home_video_cover_cd" />

    <TextView
        android:id="@+id/home_video_singer_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:textSize="12dp"
        app:layout_constraintStart_toStartOf="@id/home_video_cover_cd"
        app:layout_constraintTop_toBottomOf="@+id/home_video_name_tv" />


</androidx.constraintlayout.widget.ConstraintLayout>