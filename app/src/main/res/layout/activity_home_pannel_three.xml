<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="400dp"
    tools:context=".HomePannelThree">

    <ImageView
        android:id="@+id/home_pannel_back_iv"
        android:src="@drawable/home_pannel_background3"
        android:scaleType="centerCrop"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/play_btn_iv"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/btn_panel_play_large"
        app:layout_constraintBottom_toBottomOf="@+id/home_pannel_title_tv"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/home_pannel_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="110dp"
        android:text="집중력을 높여줄\n잔잔한 뉴에이지"
        android:textColor="#ffffff"
        android:textSize="32sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <ImageView
        android:id="@+id/home_pannel_album2_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/album_sample2"
        app:layout_constraintBottom_toBottomOf="@+id/home_pannel_back_iv"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/home_pannel_album1_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/album_sample3"
        app:layout_constraintBottom_toTopOf="@id/home_pannel_album2_iv"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/home_pannel_album2_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="GANADARA (Feat.아이유)"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/home_pannel_album2_iv"
        app:layout_constraintTop_toTopOf="@+id/home_pannel_album2_iv" />

    <TextView
        android:id="@+id/home_pannel_album2_singer_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="박재범"
        android:textColor="#ffffff"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/home_pannel_album2_iv"
        app:layout_constraintTop_toBottomOf="@+id/home_pannel_album2_title_tv" />

    <TextView
        android:id="@+id/home_pannel_album1_title_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="Summer"
        android:textColor="#ffffff"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/home_pannel_album1_iv"
        app:layout_constraintTop_toTopOf="@+id/home_pannel_album1_iv" />

    <TextView
        android:id="@+id/home_pannel_album1_singer_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:text="The Volunteers (더 발룬티어스)"
        android:textColor="#ffffff"
        android:textSize="13sp"
        app:layout_constraintStart_toEndOf="@+id/home_pannel_album1_iv"
        app:layout_constraintTop_toBottomOf="@+id/home_pannel_album1_title_tv" />

    <TextView
        android:id="@+id/home_pannel_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:text="총 45곡 2020.09.10"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@+id/home_pannel_album1_iv"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>